<h1>Sign Up</h1>

<%= form_tag "/users" do %>
  <p>
  	<%= label_tag :email, "Email" %><br />
    <%= text_field_tag :email, @last_email %>
  </p>
  <p>
    <%= label_tag :password, "Password" %><br />
    <%= password_field_tag :password %>
  </p>
  <p>
    <%= label_tag :password_confirmation, "Confirm password" %><br />
    <%= password_field_tag :password_confirmation %>
  </p>
  <p class="button"><%= submit_tag "Sign up" %></p>
<% end %>

<p><b>Password security requirements:</b><br />
	<ul>
		<li>at least 10 characters long</li>
		<li>at least 1 upper case character</li>
		<li>at least 1 lower case character</li>
		<li>at least 1 numeric digit</li>
		<li>at least 1 special character</li>
	</ul>
</p>
