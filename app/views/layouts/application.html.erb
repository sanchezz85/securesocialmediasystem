<!DOCTYPE html>
<html>
<head>
  <title>SecureSocialMediaSystem</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>
	
<div class="globalBorder">

<%= image_tag("SSMS-Logo_small.png", :align => "right") %>

<div id="user_nav">
  <% if current_user %>
    Logged in as <%= current_user.email %>.
    <%= link_to "Log out", log_out_path %>
    <br />
    <%= link_to "To your profile", my_profile_path%>
  <% else %>
    <%= link_to "Sign up", sign_up_path %> or
    <%= link_to "log in", log_in_path %>
  <% end %>
</div>

<% flash.each do |name, msg| %>
  <%= content_tag :div, msg, :id => "flash_#{name}" %>
<% end %>

<% if current_user && @profile %>
	<% if @profile.email == current_user.email %>
		<%= menuArea(@profile, true) %>
	<% else %>
		<%= menuArea(@profile, false) %>
	<% end %>
<% end %>

<div class="contentArea">
<%= yield %>
</div>

<div style="clear:both;"></div>
</div>

</body>
</html>
